html
  head
    meta name="viewport" content="width=device-width, initial-scale=1.0"
    title=content_for?(:title) ? yield(:title) : 'Gps Tracking'
    meta name="description" content="#{content_for?(:description) ? yield(:description) : 'Gps Tracking'}"
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
    -#  Modernizr is required for Zurb Foundation 4
    = javascript_include_tag "vendor/custom.modernizr"
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
  body
    -# application layout styled for Zurb Foundation 4
    header
      nav.top-bar
        ul.title-area
          li.name
            -# add site name or logo here
          li.toggle-topbar.menu-icon
            a href="#"
              span Menu
        section.top-bar-section
          = render 'layouts/navigation'
    main role="main"
      .container
        .content
          .row
            .twelve.columns
              = render 'layouts/messages'
              = yield
          footer

